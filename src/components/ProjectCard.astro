---
interface Props {
	title: string;
	info: string;
	video?: string;
	link?: string;
	source?: string;
}
const { title, info, video, link, source } = Astro.props;

const videoLink = "https://youtu.be/" + video

---

<div>	
	<div class="bg-gray-700 p-3">
		<p class="text-xl text-gray-100">{title}</p>
	</div>
	<div class="bg-gray-300 p-3">

		<p class="text-base pb-3" set:html={info}></p>


		<div class="flex justify-between">
			<div class="m-auto flex">
				 {(link) && <a href={link} class="font-medium text-blue-600 underline dark:text-blue-500 hover:no-underline">link</a> }
				 {(link && source) && <p class="font-medium" set:html=" / "></p> }
				 {(source) && <a href={source} class="font-medium text-blue-600 underline dark:text-blue-500 hover:no-underline">source</a> }
			</div>
		</div>

		<!-- <div class="flex justify-between">
				 {(video) && <iframe class="m-auto" src={videoLink} title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>}
		</div> -->

		<div class="flex justify-between">
			<div class="m-auto flex">
				{(video) && <a href={videoLink} class="font-medium text-blue-600 underline dark:text-blue-500 hover:no-underline">video</a>}
			</div>
		</div>
	</div>
</div>